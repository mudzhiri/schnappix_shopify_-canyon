{%- liquid
  assign section_height = section.settings.section_height
  if section_height == 'full-screen'
    assign section_height_class = 'impact-hero--full-screen'
  elsif section_height == 'large'
    assign section_height_class = 'impact-hero--large'
  elsif section_height == 'medium'
    assign section_height_class = 'impact-hero--medium'
  else
    assign section_height_class = 'impact-hero--auto'
  endif

  assign text_alignment = section.settings.text_alignment
  assign overlay_opacity = section.settings.overlay_opacity | divided_by: 100.0
-%}

<div class="impact-hero {{ section_height_class }} color-{{ section.settings.color_scheme }}" data-section-id="{{ section.id }}">
  {%- if section.settings.background_image != blank -%}
    <div class="impact-hero__background">
      {{
        section.settings.background_image
        | image_url: width: 3840
        | image_tag:
          loading: 'eager',
          widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840',
          sizes: '100vw',
          alt: section.settings.background_image.alt
      }}
      {%- if section.settings.toggle_overlay -%}
        <div class="impact-hero__overlay" style="background: linear-gradient(180deg, rgba(0,0,0,0) 0%, rgba(0,0,0,{{ overlay_opacity }}) 100%);"></div>
      {%- endif -%}
    </div>
  {%- endif -%}

  {%- if section.settings.background_video != blank -%}
    <div class="impact-hero__video">
      {{
        section.settings.background_video
        | video_tag:
          image_size: '1100x',
          autoplay: true,
          loop: true,
          controls: false,
          muted: true
      }}
      {%- if section.settings.toggle_overlay -%}
        <div class="impact-hero__overlay" style="background: linear-gradient(180deg, rgba(0,0,0,0) 0%, rgba(0,0,0,{{ overlay_opacity }}) 100%);"></div>
      {%- endif -%}
    </div>
  {%- endif -%}

  <div class="impact-hero__content page-width">
    <div class="impact-hero__text impact-fade-in-up" style="text-align: {{ text_alignment }};">
      {%- if section.settings.preheading != blank -%}
        <div class="impact-hero__preheading">
          {{ section.settings.preheading }}
        </div>
      {%- endif -%}

      {%- if section.settings.heading != blank -%}
        <h1 class="impact-hero__heading impact-headline{% if section.settings.use_gradient_text %} impact-gradient-text{% endif %}">
          {{ section.settings.heading }}
        </h1>
      {%- endif -%}

      {%- if section.settings.subheading != blank -%}
        <div class="impact-hero__subheading">
          {{ section.settings.subheading }}
        </div>
      {%- endif -%}

      {%- if section.settings.button_label != blank and section.settings.button_link != blank -%}
        <div class="impact-hero__button">
          <a href="{{ section.settings.button_link }}" class="impact-button-gradient">
            {{ section.settings.button_label }}
          </a>
        </div>
      {%- endif -%}
    </div>
  </div>
</div>

<style>
  .impact-hero {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 60vh;
    overflow: hidden;
  }

  .impact-hero--full-screen {
    min-height: 100vh;
  }

  .impact-hero--large {
    min-height: 80vh;
  }

  .impact-hero--medium {
    min-height: 60vh;
  }

  .impact-hero--auto {
    min-height: auto;
    padding: 120px 0;
  }

  .impact-hero__background,
  .impact-hero__video {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
  }

  .impact-hero__background img,
  .impact-hero__video video {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .impact-hero__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .impact-hero__content {
    position: relative;
    z-index: 2;
    width: 100%;
    padding: 40px 20px;
  }

  .impact-hero__text {
    max-width: 800px;
    margin: 0 auto;
  }

  .impact-hero__preheading {
    font-size: clamp(14px, 1.5vw, 18px);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 20px;
    opacity: 0.9;
  }

  .impact-hero__heading {
    margin-bottom: 24px;
  }

  .impact-hero__subheading {
    font-size: clamp(18px, 2vw, 24px);
    line-height: 1.6;
    margin-bottom: 40px;
    opacity: 0.95;
  }

  .impact-hero__button {
    margin-top: 32px;
  }

  @media (max-width: 768px) {
    .impact-hero--full-screen {
      min-height: 100svh;
    }

    .impact-hero--large {
      min-height: 70vh;
    }

    .impact-hero--medium {
      min-height: 50vh;
    }

    .impact-hero__content {
      padding: 20px;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const heroSection = document.querySelector('[data-section-id="{{ section.id }}"]');
    if (heroSection) {
      const fadeElements = heroSection.querySelectorAll('.impact-fade-in-up');
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.classList.add('visible');
          }
        });
      }, { threshold: 0.1 });

      fadeElements.forEach(el => observer.observe(el));
    }
  });
</script>

