{% comment %}
  Navigation Bar Section
  Custom navigation bar with logo, tagline, and links
{% endcomment %}

{{ 'navigation-bar.css' | asset_url | stylesheet_tag }}

<div class="navigation-bar" id="navigation-bar-{{ section.id }}">
  <div class="navigation-bar__container">
    {% if section.settings.logo != blank %}
      <div class="navigation-bar__logo">
        {% if section.settings.logo_link != blank %}
          <a href="{{ section.settings.logo_link }}">
        {% endif %}
        <img
          src="{{ section.settings.logo | image_url: width: 300 }}"
          alt="{{ section.settings.logo.alt | default: shop.name }}"
          width="{{ section.settings.logo.width }}"
          height="{{ section.settings.logo.height }}"
          loading="eager"
        >
        {% if section.settings.logo_link != blank %}
          </a>
        {% endif %}
      </div>
    {% endif %}

    <div class="navigation-bar__lockup">
      {% if section.settings.tagline != blank %}
        <div class="navigation-bar__tagline">
          {{ section.settings.tagline }}
        </div>
      {% endif %}

      <div class="navigation-bar__links">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'link' %}
              <a
                href="{{ block.settings.link_url }}"
                class="navigation-bar__link"
                {% if block.settings.link_target_blank %}
                  target="_blank"
                  rel="noopener noreferrer"
                {% endif %}
              >
                {{ block.settings.link_text }}
              </a>
          {% endcase %}
        {% endfor %}
      </div>
    </div>
  </div>

  {% if section.settings.decorative_border != blank %}
    <div class="navigation-bar__border">
      <img
        src="{{ section.settings.decorative_border | image_url: width: 1920 }}"
        alt="{{ section.settings.decorative_border.alt | default: '' }}"
        width="{{ section.settings.decorative_border.width }}"
        height="{{ section.settings.decorative_border.height }}"
        loading="lazy"
      >
    </div>
  {% endif %}
</div>

{% schema %}
{
  "name": "Navigation Bar",
  "tag": "section",
  "class": "navigation-bar-section",
  "settings": [
    {
      "type": "header",
      "content": "Logo"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo image"
    },
    {
      "type": "url",
      "id": "logo_link",
      "label": "Logo link",
      "info": "Optional: Link to homepage or other page"
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "tagline",
      "label": "Tagline",
      "default": "The ZERO-PROOF aperitif for modern living."
    },
    {
      "type": "header",
      "content": "Decorative Border"
    },
    {
      "type": "image_picker",
      "id": "decorative_border",
      "label": "Decorative border image",
      "info": "Optional: Image shown below navigation"
    },
    {
      "type": "header",
      "content": "Section Settings"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "select",
      "id": "section_width",
      "label": "Section width",
      "options": [
        {
          "value": "page-width",
          "label": "Page width"
        },
        {
          "value": "full-width",
          "label": "Full width"
        }
      ],
      "default": "page-width"
    }
  ],
  "blocks": [
    {
      "type": "link",
      "name": "Navigation Link",
      "settings": [
        {
          "type": "text",
          "id": "link_text",
          "label": "Link text",
          "default": "Link"
        },
        {
          "type": "url",
          "id": "link_url",
          "label": "Link URL"
        },
        {
          "type": "checkbox",
          "id": "link_target_blank",
          "label": "Open in new tab",
          "default": false
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Navigation Bar",
      "blocks": [
        {
          "type": "link",
          "settings": {
            "link_text": "About",
            "link_url": "#"
          }
        },
        {
          "type": "link",
          "settings": {
            "link_text": "Find Stocklists",
            "link_url": "#"
          }
        },
        {
          "type": "link",
          "settings": {
            "link_text": "Contact",
            "link_url": "https://figma.com/sites",
            "link_target_blank": true
          }
        }
      ]
    }
  ]
}
{% endschema %}
