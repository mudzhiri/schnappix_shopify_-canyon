            <a href="{{ product.url }}" class="snx-product-card__link">
              <div class="snx-product-card__image">
                {% if product.featured_image %}
                  <img src="{{ product.featured_image | image_url: width: 400 }}" alt="{{ product.title }}" loading="lazy">
                {% endif %}
              </div>
              <div class="snx-product-card__info">
                <h3 class="snx-product-card__name">{{ product.title }}</h3>
                <p class="snx-product-card__price">{{ product.price | money }}</p>
              </div>
            </a>
            <form action="/cart/add" method="post">
