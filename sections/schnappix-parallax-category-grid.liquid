{%- comment -%}
  SCHNAPPIX Parallax Category Grid Section
  A grid of category cards with parallax background effect
  Optimized for performance, accessibility, and responsive design
{%- endcomment -%}

{%- liquid
  assign section_id = 'SchnappixParallaxCategoryGrid-' | append: section.id
  assign blocks_count = section.blocks.size
  assign has_blocks = false
  assign bg_image = section.settings.bg_image
  
  if blocks_count > 0
    assign has_blocks = true
  endif
  
  assign bg_image_url = bg_image | image_url: width: 2000
  assign min_card_width = section.settings.min_card_width | default: 160
  assign grid_gap = section.settings.grid_gap | default: 28
-%}

<section
  id="{{ section_id }}"
  class="sx-parallax-category-grid color-{{ section.settings.color_scheme }}"
  data-section-id="{{ section.id }}"
  {% if bg_image != blank %}
    style="--bg-image-url: url({{ bg_image_url }});"
  {% endif %}
  {% if request.visual_preview_mode %}
    data-shopify-visual-preview
  {% endif %}
>
  {%- if bg_image != blank -%}
    <div class="sx-parallax-category-grid__background" aria-hidden="true"></div>
  {%- endif -%}
  
  {%- if section.settings.show_overlay -%}
    <div class="sx-parallax-category-grid__overlay" aria-hidden="true"></div>
  {%- endif -%}

  <div class="sx-parallax-category-grid__container section section--{{ section.settings.section_width }}">
    <div class="sx-parallax-category-grid__content">
      {%- if section.settings.headline != blank -%}
        <h2 class="sx-parallax-category-grid__headline">{{ section.settings.headline }}</h2>
      {%- endif -%}

      {%- if has_blocks -%}
        <div
          class="sx-parallax-category-grid__grid"
          style="
            --sx-grid-min-width: {{ min_card_width }}px;
            --sx-grid-gap: {{ grid_gap }}px;
          "
          data-categories-count="{{ blocks_count }}"
        >
          {%- for block in section.blocks -%}
            {%- if block.settings.link != blank -%}
              <a
                href="{{ block.settings.link }}"
                class="sx-parallax-category-grid__card"
                {{ block.shopify_attributes }}
                data-block-id="{{ block.id }}"
                data-category-index="{{ forloop.index }}"
                {% if block.settings.link contains 'http' %}
                  target="_blank"
                  rel="noopener noreferrer"
                {% endif %}
              >
                {%- if block.settings.image != blank -%}
                  <div class="sx-parallax-category-grid__card-image-wrapper">
                    {{
                      block.settings.image
                      | image_url: width: 800
                      | image_tag:
                        loading: 'lazy',
                        width: block.settings.image.width,
                        height: block.settings.image.height,
                        alt: block.settings.image.alt | default: block.settings.title,
                        class: 'sx-parallax-category-grid__card-image',
                        sizes: '(min-width: 1100px) 25vw, (min-width: 768px) 33vw, 50vw'
                      }}
                  </div>
                {%- endif -%}
                
                {%- if block.settings.title != blank -%}
                  <div class="sx-parallax-category-grid__card-title">
                    {{ block.settings.title }}
                  </div>
                {%- endif -%}
              </a>
            {%- endif -%}
          {%- endfor -%}
        </div>
      {%- else -%}
        <div class="sx-parallax-category-grid__empty">
          <p>{{ section.settings.empty_message | default: 'Add categories in section settings' }}</p>
        </div>
      {%- endif -%}
    </div>
  </div>
</section>

{% stylesheet %}
  :root {
    --sx-orange: #F15A29;
    --sx-orange-glow: #FF6A3E;
    --sx-black: #000000;
    --sx-grey-mid: #1E1E1E;
    --sx-grey-border: #2F2F2F;
    --sx-white: #FFFFFF;
  }

  .sx-parallax-category-grid {
    position: relative;
    padding: clamp(80px, 12vw, 120px) 0;
    overflow: hidden;
    color: var(--sx-white);
    isolation: isolate;
    min-height: 400px;
  }

  .sx-parallax-category-grid__background {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    background-image: var(--bg-image-url);
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    background-attachment: fixed;
    filter: brightness(0.3) contrast(1.2);
    z-index: 1;
    will-change: transform;
  }

  @media screen and (max-width: 749px) {
    .sx-parallax-category-grid__background {
      background-attachment: scroll;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .sx-parallax-category-grid__background {
      background-attachment: scroll;
    }
  }

  .sx-parallax-category-grid__overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0.6) 0%,
      rgba(0, 0, 0, 0.85) 100%
    );
    z-index: 2;
    pointer-events: none;
  }

  .sx-parallax-category-grid__container {
    position: relative;
    z-index: 10;
  }

  .sx-parallax-category-grid__content {
    max-width: 1250px;
    margin: 0 auto;
    padding: 0 20px;
    text-align: center;
  }

  @media screen and (max-width: 749px) {
    .sx-parallax-category-grid__content {
      padding: 0 16px;
    }
  }

  .sx-parallax-category-grid__headline {
    font-family: 'Montserrat Alternates', var(--font-primary--family), sans-serif;
    font-size: clamp(32px, 4vw, 56px);
    font-weight: 800;
    line-height: 1.2;
    margin: 0 0 clamp(40px, 6vw, 60px);
    text-shadow: 
      0 0 14px rgba(255, 106, 62, 0.6),
      0 0 28px rgba(255, 106, 62, 0.3),
      0 2px 4px rgba(0, 0, 0, 0.5);
    letter-spacing: 0.02em;
    color: var(--sx-white);
  }

  .sx-parallax-category-grid__grid {
    display: grid;
    gap: var(--sx-grid-gap, 28px);
    grid-template-columns: repeat(auto-fit, minmax(var(--sx-grid-min-width, 160px), 1fr));
    width: 100%;
  }

  @media screen and (min-width: 768px) {
    .sx-parallax-category-grid__grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 32px;
    }
  }

  @media screen and (min-width: 1100px) {
    .sx-parallax-category-grid__grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  @media screen and (max-width: 767px) {
    .sx-parallax-category-grid__grid {
      grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
      gap: 20px;
    }
  }

  .sx-parallax-category-grid__card {
    position: relative;
    border-radius: 18px;
    overflow: hidden;
    background: var(--sx-grey-mid);
    border: 1px solid var(--sx-grey-border);
    cursor: pointer;
    transition: transform 0.35s cubic-bezier(0.4, 0, 0.2, 1), box-shadow 0.35s ease;
    padding-bottom: 58%;
    display: block;
    text-decoration: none;
    will-change: transform;
  }

  @media (prefers-reduced-motion: no-preference) {
    .sx-parallax-category-grid__card:hover,
    .sx-parallax-category-grid__card:focus {
      transform: translateY(-10px);
      box-shadow: 0 8px 22px rgba(255, 106, 62, 0.45);
      outline: none;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .sx-parallax-category-grid__card {
      transition: box-shadow 0.3s ease;
    }
    
    .sx-parallax-category-grid__card:hover,
    .sx-parallax-category-grid__card:focus {
      transform: none;
      box-shadow: 0 4px 12px rgba(255, 106, 62, 0.3);
    }
  }

  @media (hover: none) {
    .sx-parallax-category-grid__card:hover {
      transform: none;
      box-shadow: none;
    }
  }

  .sx-parallax-category-grid__card-image-wrapper {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
  }

  .sx-parallax-category-grid__card-image {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    filter: brightness(0.82);
    transition: filter 0.4s ease, transform 0.4s ease;
    display: block;
  }

  @media (prefers-reduced-motion: no-preference) {
    .sx-parallax-category-grid__card:hover .sx-parallax-category-grid__card-image,
    .sx-parallax-category-grid__card:focus .sx-parallax-category-grid__card-image {
      filter: brightness(1.05) saturate(1.15);
      transform: scale(1.05);
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .sx-parallax-category-grid__card-image {
      transition: none;
    }
    
    .sx-parallax-category-grid__card:hover .sx-parallax-category-grid__card-image,
    .sx-parallax-category-grid__card:focus .sx-parallax-category-grid__card-image {
      filter: brightness(0.9);
      transform: none;
    }
  }

  .sx-parallax-category-grid__card-title {
    position: absolute;
    bottom: clamp(14px, 2vw, 18px);
    left: clamp(14px, 2vw, 18px);
    background: rgba(0, 0, 0, 0.6);
    backdrop-filter: blur(8px);
    padding: clamp(6px, 1vw, 8px) clamp(12px, 2vw, 16px);
    border-radius: 12px;
    font-family: 'Montserrat Alternates', var(--font-primary--family), sans-serif;
    font-size: clamp(16px, 2vw, 18px);
    font-weight: 700;
    color: var(--sx-white);
    text-shadow: 0 0 8px rgba(0, 0, 0, 0.8);
    border: 1px solid rgba(255, 106, 62, 0.4);
    z-index: 2;
    transition: background 0.3s ease, border-color 0.3s ease;
  }

  .sx-parallax-category-grid__card:hover .sx-parallax-category-grid__card-title,
  .sx-parallax-category-grid__card:focus .sx-parallax-category-grid__card-title {
    background: rgba(0, 0, 0, 0.8);
    border-color: rgba(255, 106, 62, 0.6);
  }

  .sx-parallax-category-grid__empty {
    text-align: center;
    padding: 60px 20px;
    color: rgba(255, 255, 255, 0.7);
  }

  .sx-parallax-category-grid__empty p {
    margin: 0;
    font-size: 18px;
  }

  /* Focus states for accessibility */
  .sx-parallax-category-grid__card:focus-visible {
    outline: 2px solid #FF6A3E;
    outline-offset: 2px;
  }

  /* High contrast mode support */
  @media (prefers-contrast: high) {
    .sx-parallax-category-grid__card {
      border-width: 2px;
    }
    
    .sx-parallax-category-grid__card-title {
      background: rgba(0, 0, 0, 0.9);
      border-width: 2px;
    }
  }

  /* Print styles */
  @media print {
    .sx-parallax-category-grid__background,
    .sx-parallax-category-grid__overlay {
      display: none;
    }
    
    .sx-parallax-category-grid {
      background: #fff;
      color: #000;
    }
    
    .sx-parallax-category-grid__card {
      transform: none !important;
      box-shadow: none !important;
      break-inside: avoid;
      page-break-inside: avoid;
    }
  }

  /* Performance: GPU acceleration */
  .sx-parallax-category-grid__card {
    transform: translateZ(0);
    backface-visibility: hidden;
  }
{% endstylesheet %}

