{%- comment -%}
  SCHNAPPIX Neon Marquee Section
  A scrolling text marquee with neon glow effect
  Optimized for performance, accessibility, and responsive design
{%- endcomment -%}

{%- liquid
  assign section_id = 'SchnappixNeonMarquee-' | append: section.id
  assign scroll_text = section.settings.text | default: 'SNACKS · ENERGY DRINKS · KOREAN TREATS · BOBA · TREND DROPS · SCHNAPPIX'
  assign scroll_speed = section.settings.speed | default: 18
  assign has_text = false
  
  if scroll_text != blank
    assign has_text = true
  endif
  
  # Calculate animation duration based on speed setting
  assign animation_duration = scroll_speed | append: 's'
-%}

<section
  id="{{ section_id }}"
  class="sx-neon-marquee color-{{ section.settings.color_scheme }}"
  data-section-id="{{ section.id }}"
  style="--marquee-speed: {{ animation_duration }};"
  {% if request.visual_preview_mode %}
    data-shopify-visual-preview
  {% endif %}
>
  <div class="sx-neon-marquee__container">
    {%- if has_text -%}
      <div class="sx-neon-marquee__track" aria-hidden="true">
        <div class="sx-neon-marquee__content">
          <span class="sx-neon-marquee__text">{{ scroll_text }}</span>
          <span class="sx-neon-marquee__text" aria-hidden="true">{{ scroll_text }}</span>
          <span class="sx-neon-marquee__text" aria-hidden="true">{{ scroll_text }}</span>
        </div>
      </div>
      {%- comment -%} Screen reader accessible version {%- endcomment -%}
      <div class="visually-hidden">
        {{ scroll_text }}
      </div>
    {%- else -%}
      <div class="sx-neon-marquee__empty">
        <p>{{ section.settings.empty_message | default: 'Add scrolling text in section settings' }}</p>
      </div>
    {%- endif -%}
  </div>
</section>

{% stylesheet %}
  .sx-neon-marquee {
    width: 100%;
    overflow: hidden;
    background: rgb(var(--color-background));
    padding: clamp(12px, 2vw, 14px) 0;
    position: relative;
    border-top: 1px solid rgba(var(--color-border-rgb), 0.5);
    border-bottom: 1px solid rgba(var(--color-border-rgb), 0.5);
    isolation: isolate;
  }

  .sx-neon-marquee__container {
    width: 100%;
    position: relative;
  }

  .sx-neon-marquee__track {
    display: flex;
    width: 100%;
    overflow: hidden;
    mask-image: linear-gradient(
      to right,
      transparent 0%,
      black 5%,
      black 95%,
      transparent 100%
    );
    -webkit-mask-image: linear-gradient(
      to right,
      transparent 0%,
      black 5%,
      black 95%,
      transparent 100%
    );
  }

  .sx-neon-marquee__content {
    display: flex;
    white-space: nowrap;
    animation: sx-marquee-scroll var(--marquee-speed, 18s) linear infinite;
    will-change: transform;
  }

  @media (prefers-reduced-motion: reduce) {
    .sx-neon-marquee__content {
      animation: none;
      justify-content: center;
    }
  }

  .sx-neon-marquee__text {
    color: #F15A29;
    font-family: 'Montserrat Alternates', var(--font-primary--family), sans-serif;
    font-size: clamp(18px, 3vw, 24px);
    font-weight: 800;
    padding-right: clamp(40px, 6vw, 60px);
    text-shadow: 
      0 0 10px rgba(255, 106, 62, 0.6),
      0 0 20px rgba(255, 106, 62, 0.4),
      0 0 30px rgba(255, 106, 62, 0.2);
    letter-spacing: 0.05em;
    flex-shrink: 0;
    display: inline-block;
  }

  @media screen and (max-width: 749px) {
    .sx-neon-marquee__text {
      font-size: clamp(16px, 4vw, 20px);
      padding-right: clamp(30px, 5vw, 50px);
    }
  }

  @keyframes sx-marquee-scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-33.333%);
    }
  }

  /* Pause animation on hover for better UX */
  .sx-neon-marquee:hover .sx-neon-marquee__content {
    animation-play-state: paused;
  }

  @media (prefers-reduced-motion: reduce) {
    .sx-neon-marquee:hover .sx-neon-marquee__content {
      animation-play-state: running;
    }
  }

  .sx-neon-marquee__empty {
    text-align: center;
    padding: 20px;
    color: rgba(var(--color-foreground), 0.6);
  }

  .sx-neon-marquee__empty p {
    margin: 0;
    font-size: 14px;
  }

  /* Visually hidden utility class */
  .visually-hidden {
    position: absolute !important;
    width: 1px !important;
    height: 1px !important;
    padding: 0 !important;
    margin: -1px !important;
    overflow: hidden !important;
    clip: rect(0, 0, 0, 0) !important;
    white-space: nowrap !important;
    border: 0 !important;
  }

  /* High contrast mode support */
  @media (prefers-contrast: high) {
    .sx-neon-marquee__text {
      text-shadow: none;
      color: rgb(var(--color-foreground));
    }
  }

  /* Dark mode adjustments */
  @media (prefers-color-scheme: dark) {
    .sx-neon-marquee {
      background: rgba(0, 0, 0, 0.8);
    }
  }

  /* Print styles */
  @media print {
    .sx-neon-marquee__content {
      animation: none;
    }
    
    .sx-neon-marquee__text {
      text-shadow: none;
    }
  }

  /* Performance optimization: GPU acceleration */
  .sx-neon-marquee__content {
    transform: translateZ(0);
    backface-visibility: hidden;
    perspective: 1000px;
  }

  /* Focus visible for better accessibility */
  .sx-neon-marquee:focus-visible {
    outline: 2px solid #F15A29;
    outline-offset: 2px;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "SCHNAPPIX Neon Marquee",
  "tag": "section",
  "class": "section-wrapper",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "text",
      "label": "Scrolling Text",
      "default": "SNACKS · ENERGY DRINKS · KOREAN TREATS · BOBA · TREND DROPS · SCHNAPPIX",
      "info": "Text will scroll continuously. Use · or | as separators for best visual effect."
    },
    {
      "type": "header",
      "content": "Animation"
    },
    {
      "type": "range",
      "id": "speed",
      "min": 5,
      "max": 40,
      "step": 1,
      "unit": "s",
      "label": "Scroll Speed",
      "default": 18,
      "info": "Lower values = faster scroll. Higher values = slower scroll."
    },
    {
      "type": "checkbox",
      "id": "pause_on_hover",
      "label": "Pause Animation on Hover",
      "default": true,
      "info": "Animation pauses when user hovers over the marquee"
    },
    {
      "type": "header",
      "content": "Appearance"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "scheme-1"
    },
    {
      "type": "text",
      "id": "empty_message",
      "label": "Empty State Message",
      "default": "Add scrolling text in section settings",
      "info": "Message shown when no text is provided"
    }
  ],
  "presets": [
    {
      "name": "SCHNAPPIX Neon Marquee",
      "category": "Custom"
    }
  ],
  "disabled_on": {
    "groups": ["header", "footer"]
  }
}
{% endschema %}

