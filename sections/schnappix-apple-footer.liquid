    {
      "type": "header",
      "content": "Column 1 Settings"
    },
    {
      "type": "text",
      "id": "column_1_heading",
      "label": "Column 1 Heading",
      "default": "SCHNAPPIX"
    },
    {
      "type": "link_list",
      "id": "column_1_menu",
      "label": "Column 1 Menu",
      "info": "Optional: Select a menu to display links dynamically"
    },
    {
      "type": "header",
      "content": "Column 2 Settings"
    },
    {
      "type": "text",
      "id": "column_2_heading",
      "label": "Column 2 Heading",
      "default": "Geschäftsfelder"
    },
    {
      "type": "link_list",
      "id": "column_2_menu",
      "label": "Column 2 Menu",
      "info": "Optional: Select a menu to display links dynamically"
    },
    {
      "type": "header",
      "content": "Column 3 Settings"
    },
    {
      "type": "text",
      "id": "column_3_heading",
      "label": "Column 3 Heading",
      "default": "Rechtliches"
    },
    {
      "type": "link_list",
      "id": "column_3_menu",
      "label": "Column 3 Menu",
      "info": "Optional: Select a menu to display links dynamically"
    },
    {
      "type": "header",
      "content": "Column 4 Settings (Optional)"
    },
    {
      "type": "checkbox",
      "id": "show_column_4",
      "label": "Show Column 4",
      "default": false
    },
    {
      "type": "text",
      "id": "column_4_heading",
      "label": "Column 4 Heading",
      "visible_if": "{{ section.settings.show_column_4 }}"
