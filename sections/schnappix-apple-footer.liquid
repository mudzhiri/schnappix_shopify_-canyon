    {
      "type": "link_list",
      "id": "column_4_menu",
      "label": "Column 4 Menu",
      "visible_if": "{{ section.settings.show_column_4 }}",
      "info": "Optional: Select a menu to display links dynamically"
    },
    {
      "type": "header",
      "content": "Footer Bottom"
    },
    {
      "type": "text",
      "id": "copyright_text",
      "label": "Copyright Text",
      "default": "© 2025 SCHNAPPIX – All rights reserved."
    }
  ],
  "presets": [
    {
      "name": "SCHNAPPIX Apple Footer"
    }
  ]
}
{% endschema %}

