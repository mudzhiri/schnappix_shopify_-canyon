{% comment %}
  Zooom Hero Section - Converted from Webflow HTML
{% endcomment %}

<div class="page-wrapper">
  <main class="main-wrapper">
    <div data-w-id="d5ed1d9f-67fc-abaf-dceb-d8a2817c17a7" class="hero-section">
      <div class="padding-global padding-section-large">
        {% comment %} Navigation {% endcomment %}
        <div data-w-id="7ff63783-38d7-a209-3135-0442324d2956" data-animation="default" data-collapse="medium" data-duration="400" data-easing="ease" data-easing2="ease" role="banner" class="navbar w-nav">
          <div class="padding-global">
            <div class="nav-container">
              <div class="nav-wrapper">
                <a href="{{ routes.root_url }}" class="brand w-nav-brand">
                  {% if section.settings.logo != blank %}
                    <img src="{{ section.settings.logo | image_url: width: 200 }}" loading="eager" alt="{{ shop.name }}">
                  {% else %}
                    <img src="{{ 'zoooom.svg' | asset_url }}" loading="eager" alt="{{ shop.name }}">
                  {% endif %}
                </a>
                <nav role="navigation" class="nav-menu w-nav-menu">
                  <div class="menu-wrapper">
                    <a href="{{ routes.collections_url }}" class="nav-link text-color-orange w-nav-link">PRODUCTS</a>
                    <a href="#about" class="nav-link w-nav-link">About</a>
                    <a href="#reviews" class="nav-link w-nav-link">reviews</a>
                    <a href="{{ routes.blogs_url }}" class="nav-link w-nav-link">Articles</a>
                    <a href="#faq" class="nav-link w-nav-link">faq</a>
                    <a data-w-id="4fab8454-2460-543d-fa9a-058251a37004" href="{{ routes.collections_url }}" class="button-wrapper hide-desktop w-inline-block">
                      <div class="button is-cta">{{ section.settings.cta_text | default: 'TRY ZOOOOM' }}</div>
                      <div class="button-shadow"></div>
                    </a>
                  </div>
                </nav>
                <a data-w-id="d5a2b38d-59eb-fe0c-870a-48efbe1898b1" href="{{ routes.collections_url }}" class="button-wrapper hide-tablet w-inline-block">
                  <div class="button-shadow"></div>
                  <div class="button is-cta">{{ section.settings.cta_text | default: 'TRY ZOOOOM' }}</div>
                </a>
                <div class="menu-button w-nav-button">
                  <div data-is-ix2-target="1" class="menu-bars" data-w-id="486bf92d-7ccf-2b86-c2f0-c3adf68f3199"></div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="container-large">
          <div class="hero-section_wrapper">
            <h1 class="hero-heading hide-mobile-landscape">{{ section.settings.hero_title | default: 'SCHNAPPIX' }}</h1>
            <h1 class="hero-heading mobile-version">{{ section.settings.hero_title_mobile | default: 'ZOO<br>OOM' }}</h1>
            <h2 class="hero-description">
              {{ section.settings.hero_description | default: 'The energy of nature <br>in every bottle' }}
            </h2>
            <div class="spacer-tiny hide-mobile-landscape"></div>
            <a href="#products" class="button-wrapper w-inline-block">
              <div class="button-shadow"></div>
              <div class="button is-secondary">{{ section.settings.button_text | default: 'Buy NOW' }}</div>
            </a>
          </div>
        </div>
      </div>
      <div data-w-id="77d891bd-edaf-7418-7c5b-d5fccae9b45e" class="hero-image-wrapper">
        {% if section.settings.top_shape_image != blank %}
          <img src="{{ section.settings.top_shape_image | image_url: width: 800 }}" loading="eager" alt="" class="top-shape">
        {% else %}
          <img src="{{ 'OBJECTS.svg' | asset_url }}" loading="eager" alt="" class="top-shape">
        {% endif %}
        {% if section.settings.bottle_image != blank %}
          <img src="{{ section.settings.bottle_image | image_url: width: 658 }}" loading="eager" width="658" alt="" class="top-bottle">
        {% else %}
          <img src="{{ 'rotated-bottle.webp' | asset_url }}" loading="eager" width="658" alt="" class="top-bottle">
        {% endif %}
        <div class="orange-wrapper">
          {% if section.settings.orange_image != blank %}
            <img src="{{ section.settings.orange_image | image_url: width: 256 }}" loading="lazy" width="256" alt="" class="orange">
          {% else %}
            <img src="{{ 'orange.webp' | asset_url }}" loading="lazy" width="256" alt="" class="orange">
          {% endif %}
          <img src="{{ 'leaf.svg' | asset_url }}" loading="lazy" alt="" class="leaf">
        </div>
        <img src="{{ 'slice.webp' | asset_url }}" loading="eager" alt="" class="slice">
      </div>
    </div>

    {% comment %} Popular Products Section {% endcomment %}
    <div id="products" class="popular-products-section">
      <div class="padding-global padding-section-medium">
        <div class="container-large">
          <div class="popular-products_wrapper">
            <h2 class="text-align-center text-color-white">
              <span class="text-color-yellow">POPULAR</span> PRODUCTS
            </h2>
            <div class="product-list-wrapper">
              {% if section.settings.collection != blank %}
                {% assign collection = collections[section.settings.collection] %}
                <div class="products-grid">
                  {% for product in collection.products limit: section.settings.products_limit %}
                    <div role="listitem" class="product-card">
                      <a title="Go to product" href="{{ product.url }}" class="product-link-wrapper w-inline-block">
                        <div class="product-picture-wrapper">
                          {% if product.featured_image != blank %}
                            <img loading="lazy" width="658" src="{{ product.featured_image | image_url: width: 658 }}" alt="{{ product.featured_image.alt | escape }}" class="product-picture">
                          {% else %}
                            <img loading="lazy" width="658" src="{{ 'placeholder.png' | asset_url }}" alt="{{ product.title }}" class="product-picture">
                          {% endif %}
                        </div>
                      </a>
                      <a href="{{ product.url }}" class="product-meta-wrapper w-inline-block">
                        <h3 class="product-name">{{ product.title }}</h3>
                        <div class="product-price">
                          {% render 'price', product: product, price_class: 'price--on-sale' %}
                        </div>
                      </a>
                      <div>
                        {% form 'product', product, class: 'form', novalidate: 'novalidate', data-product-form: '' %}
                          <input type="number" pattern="^[0-9]+$" inputmode="numeric" id="quantity-{{ product.id }}" name="quantity" min="1" class="hide" value="1">
                          <button type="submit" name="add" class="button is-secondary with-arrow" data-add-to-cart>
                            <span data-add-to-cart-text>ADD TO CART</span>
                          </button>
                        {% endform %}
                      </div>
                    </div>
                  {% endfor %}
                </div>
              {% else %}
                <div class="w-dyn-empty">
                  <div>No items found.</div>
                </div>
              {% endif %}
            </div>
            <a href="{{ routes.collections_url }}" class="button-wrapper align-center w-inline-block">
              <div class="button-shadow"></div>
              <div class="button">VIEW ALL PRODUCTS</div>
            </a>
          </div>
        </div>
      </div>
    </div>
  </main>
</div>

{% schema %}
{
  "name": "Zooom Hero",
  "tag": "section",
  "class": "zooom-hero-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "text",
      "id": "hero_title",
      "label": "Hero Title",
      "default": "SCHNAPPIX"
    },
    {
      "type": "text",
      "id": "hero_title_mobile",
      "label": "Hero Title Mobile",
      "default": "ZOO<br>OOM"
    },
    {
      "type": "richtext",
      "id": "hero_description",
      "label": "Hero Description",
      "default": "<p>The energy of nature <br>in every bottle</p>"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Buy NOW"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Button Text",
      "default": "TRY ZOOOOM"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_limit",
      "label": "Products to show",
      "min": 2,
      "max": 12,
      "step": 1,
      "default": 4
    },
    {
      "type": "image_picker",
      "id": "top_shape_image",
      "label": "Top Shape Image"
    },
    {
      "type": "image_picker",
      "id": "bottle_image",
      "label": "Bottle Image"
    },
    {
      "type": "image_picker",
      "id": "orange_image",
      "label": "Orange Image"
    }
  ],
  "presets": [
    {
      "name": "Zooom Hero"
    }
  ]
}
{% endschema %}
