{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-hero-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    min-height: {{ block.settings.min_height_desktop }}px;
    display: flex;
    align-items: {{ block.settings.content_alignment_vertical }};
    justify-content: {{ block.settings.content_alignment_horizontal }};
    overflow: hidden;
    background-color: {{ block.settings.background_color }};
  }

  .ai-hero-background-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .ai-hero-background-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: {{ block.settings.image_position }};
  }

  .ai-hero-background-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #000000 0%, #1a1a1a 100%);
  }

  .ai-hero-background-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    opacity: 0.1;
  }

  .ai-hero-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.overlay_color }};
    opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }};
    z-index: 2;
  }

  .ai-hero-content-{{ ai_gen_id }} {
    position: relative;
    z-index: 3;
    max-width: {{ block.settings.content_max_width }}px;
    padding: {{ block.settings.content_padding_vertical }}px {{ block.settings.content_padding_horizontal }}px;
    text-align: {{ block.settings.text_alignment }};
    width: 100%;
  }

  .ai-hero-badge-{{ ai_gen_id }} {
    display: inline-block;
    padding: 8px 16px;
    background-color: {{ block.settings.badge_background }};
    color: {{ block.settings.badge_text_color }};
    border-radius: {{ block.settings.badge_border_radius }}px;
    font-size: {{ block.settings.badge_font_size }}px;
    font-weight: 600;
    margin-bottom: 20px;
    text-transform: uppercase;
    letter-spacing: 1px;
    {% if block.settings.badge_glow %}
      box-shadow: 0 0 20px {{ block.settings.badge_background }};
    {% endif %}
  }

  .ai-hero-heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size_desktop }}px;
    line-height: 1.1;
    margin: 0 0 {{ block.settings.heading_spacing }}px;
    font-weight: 700;
    {% if block.settings.heading_glow %}
      text-shadow: 0 0 30px {{ block.settings.heading_color }};
    {% endif %}
  }

  .ai-hero-subheading-{{ ai_gen_id }} {
    color: {{ block.settings.subheading_color }};
    font-size: {{ block.settings.subheading_size_desktop }}px;
    line-height: 1.5;
    margin: 0 0 {{ block.settings.subheading_spacing }}px;
    font-weight: 400;
  }

  .ai-hero-buttons-{{ ai_gen_id }} {
    display: flex;
    gap: 16px;
    margin-top: {{ block.settings.buttons_spacing }}px;
    flex-wrap: wrap;
    {% if block.settings.text_alignment == 'center' %}
      justify-content: center;
    {% elsif block.settings.text_alignment == 'right' %}
      justify-content: flex-end;
    {% else %}
      justify-content: flex-start;
    {% endif %}
  }

  .ai-hero-button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 16px 32px;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: 600;
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    transition: all 0.3s ease;
    white-space: nowrap;
  }

  .ai-hero-button-primary-{{ ai_gen_id }} {
    background-color: {{ block.settings.primary_btn_bg }};
    color: {{ block.settings.primary_btn_text }};
    border: 2px solid {{ block.settings.primary_btn_bg }};
    {% if block.settings.primary_btn_glow %}
      box-shadow: 0 0 20px {{ block.settings.primary_btn_bg }};
    {% endif %}
  }

  .ai-hero-button-primary-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.primary_btn_hover_bg }};
    border-color: {{ block.settings.primary_btn_hover_bg }};
    color: {{ block.settings.primary_btn_hover_text }};
    transform: translateY(-2px);
    {% if block.settings.primary_btn_glow %}
      box-shadow: 0 4px 30px {{ block.settings.primary_btn_hover_bg }};
    {% endif %}
  }

  .ai-hero-button-secondary-{{ ai_gen_id }} {
    background-color: {{ block.settings.secondary_btn_bg }};
    color: {{ block.settings.secondary_btn_text }};
    border: 2px solid {{ block.settings.secondary_btn_border }};
  }

  .ai-hero-button-secondary-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.secondary_btn_hover_bg }};
    border-color: {{ block.settings.secondary_btn_hover_border }};
    color: {{ block.settings.secondary_btn_hover_text }};
    transform: translateY(-2px);
  }

  @media screen and (max-width: 749px) {
    .ai-hero-{{ ai_gen_id }} {
      min-height: {{ block.settings.min_height_mobile }}px;
    }

    .ai-hero-content-{{ ai_gen_id }} {
      padding: {{ block.settings.content_padding_vertical_mobile }}px {{ block.settings.content_padding_horizontal_mobile }}px;
    }

    .ai-hero-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size_mobile }}px;
    }

    .ai-hero-subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.subheading_size_mobile }}px;
    }

    .ai-hero-buttons-{{ ai_gen_id }} {
      flex-direction: column;
      width: 100%;
    }

    .ai-hero-button-{{ ai_gen_id }} {
      width: 100%;
    }
  }
{% endstyle %}

<div class="ai-hero-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-hero-background-{{ ai_gen_id }}">
    {% if block.settings.background_image %}
      <img
        src="{{ block.settings.background_image | image_url: width: 2000 }}"
        alt="{{ block.settings.background_image.alt | escape }}"
        loading="lazy"
        width="{{ block.settings.background_image.width }}"
        height="{{ block.settings.background_image.height }}"
      >
    {% else %}
      <div class="ai-hero-background-placeholder-{{ ai_gen_id }}">
        {{ 'hero-apparel-1' | placeholder_svg_tag }}
      </div>
    {% endif %}
  </div>

  {% if block.settings.show_overlay %}
    <div class="ai-hero-overlay-{{ ai_gen_id }}"></div>
  {% endif %}

  <div class="ai-hero-content-{{ ai_gen_id }}">
    {% if block.settings.badge_text != blank %}
      <div class="ai-hero-badge-{{ ai_gen_id }}">
        {{ block.settings.badge_text }}
      </div>
    {% endif %}

    {% if block.settings.heading != blank %}
      <h1 class="ai-hero-heading-{{ ai_gen_id }}">
        {{ block.settings.heading }}
      </h1>
    {% endif %}

    {% if block.settings.subheading != blank %}
      <div class="ai-hero-subheading-{{ ai_gen_id }}">
        {{ block.settings.subheading }}
      </div>
    {% endif %}

    {% if block.settings.primary_btn_label != blank or block.settings.secondary_btn_label != blank %}
      <div class="ai-hero-buttons-{{ ai_gen_id }}">
        {% if block.settings.primary_btn_label != blank %}
          <a
            href="{{ block.settings.primary_btn_link }}"
            class="ai-hero-button-{{ ai_gen_id }} ai-hero-button-primary-{{ ai_gen_id }}"
          >
            {{ block.settings.primary_btn_label }}
          </a>
        {% endif %}

        {% if block.settings.secondary_btn_label != blank %}
          <a
            href="{{ block.settings.secondary_btn_link }}"
            class="ai-hero-button-{{ ai_gen_id }} ai-hero-button-secondary-{{ ai_gen_id }}"
          >
            {{ block.settings.secondary_btn_label }}
          </a>
        {% endif %}
      </div>
    {% endif %}
  </div>
</div>

