{% doc %}
  @prompt
    Create a cinematic logo animation for the brand SCHNAPPIX with an urban-night neon aesthetic. 
    Use deep black (#000000) and Schnappix Orange (#F15A29) as dominant colors. 
    Add a strong Neon Ember glow (#FF6A3E) around the logo. 
    The scene starts blurred with wet glass reflections, raindrops slowly moving, and soft bokeh lights in the background. 
    The orange PIX block appears first as a glowing pixel pulse that expands with a subtle pixel-explosion effect. 
    Then the SCHNAPPIX text fades in letter-by-letter with a neon flicker effect. 
    Add subtle camera shake, film grain, and atmospheric fog. 
    Style: Cyberpunk, Urban Street, 4K, cinematic, high contrast, premium brand feel. 
    Ending: Logo stays centered with a soft pulsating glow. 
    Duration: 3â€“5 seconds.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-schnappix-logo-animation-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: {{ block.settings.animation_height }}px;
    background: {{ block.settings.background_color }};
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-schnappix-logo-animation-{{ ai_gen_id }}::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(circle at 30% 50%, rgba(241, 90, 41, 0.1) 0%, transparent 50%),
                radial-gradient(circle at 70% 50%, rgba(255, 106, 62, 0.08) 0%, transparent 50%);
    opacity: 0;
    animation: ai-schnappix-fog-{{ ai_gen_id }} 5s ease-in-out infinite;
  }

  .ai-schnappix-logo-container-{{ ai_gen_id }} {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 20px;
    filter: blur({{ block.settings.initial_blur }}px);
    animation: ai-schnappix-unblur-{{ ai_gen_id }} 1s ease-out forwards;
  }

  .ai-schnappix-pix-block-{{ ai_gen_id }} {
    position: relative;
    width: {{ block.settings.pix_size }}px;
    height: {{ block.settings.pix_size }}px;
    background: {{ block.settings.orange_color }};
    border-radius: {{ block.settings.pix_border_radius }}px;
    box-shadow: 0 0 {{ block.settings.glow_intensity }}px {{ block.settings.glow_color }},
                0 0 {{ block.settings.glow_intensity | times: 2 }}px {{ block.settings.glow_color }},
                0 0 {{ block.settings.glow_intensity | times: 3 }}px {{ block.settings.orange_color }};
    opacity: 0;
    transform: scale(0);
    animation: ai-schnappix-pix-pulse-{{ ai_gen_id }} 1.5s cubic-bezier(0.34, 1.56, 0.64, 1) forwards;
  }

  .ai-schnappix-pix-block-{{ ai_gen_id }}::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 100%;
    height: 100%;
    background: {{ block.settings.glow_color }};
    border-radius: {{ block.settings.pix_border_radius }}px;
    transform: translate(-50%, -50%);
    opacity: 0;
    animation: ai-schnappix-pixel-explosion-{{ ai_gen_id }} 0.8s ease-out 0.5s forwards;
  }

  .ai-schnappix-text-{{ ai_gen_id }} {
    font-family: {{ block.settings.font_family.family }}, {{ block.settings.font_family.fallback_families }};
    font-size: {{ block.settings.text_size }}px;
    font-weight: {{ block.settings.font_weight }};
    letter-spacing: {{ block.settings.letter_spacing }}px;
    color: {{ block.settings.text_color }};
    text-transform: uppercase;
    display: flex;
    gap: 2px;
  }

  .ai-schnappix-letter-{{ ai_gen_id }} {
    opacity: 0;
    text-shadow: 0 0 {{ block.settings.text_glow }}px {{ block.settings.glow_color }},
                 0 0 {{ block.settings.text_glow | times: 2 }}px {{ block.settings.orange_color }};
    animation: ai-schnappix-letter-flicker-{{ ai_gen_id }} 0.3s ease-in forwards;
  }

  {% for i in (1..10) %}
    .ai-schnappix-letter-{{ ai_gen_id }}:nth-child({{ i }}) {
      animation-delay: {{ i | times: 0.1 | plus: 1.5 }}s;
    }
  {% endfor %}

  .ai-schnappix-glass-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, 
      transparent 0%, 
      rgba(255, 255, 255, 0.03) 25%, 
      transparent 50%, 
      rgba(255, 255, 255, 0.02) 75%, 
      transparent 100%);
    pointer-events: none;
    opacity: 0;
    animation: ai-schnappix-glass-{{ ai_gen_id }} 3s ease-in-out 0.5s forwards;
  }

  .ai-schnappix-raindrop-{{ ai_gen_id }} {
    position: absolute;
    width: 2px;
    height: 20px;
    background: linear-gradient(to bottom, transparent, rgba(255, 255, 255, 0.1));
    opacity: 0;
    animation: ai-schnappix-rain-{{ ai_gen_id }} 2s linear infinite;
  }

  {% for i in (1..8) %}
    .ai-schnappix-raindrop-{{ ai_gen_id }}:nth-child({{ i }}) {
      left: {{ i | times: 12 }}%;
      animation-delay: {{ i | times: 0.3 }}s;
    }
  {% endfor %}

  .ai-schnappix-bokeh-{{ ai_gen_id }} {
    position: absolute;
    border-radius: 50%;
    background: radial-gradient(circle, {{ block.settings.glow_color }} 0%, transparent 70%);
    opacity: 0.2;
    filter: blur(8px);
    animation: ai-schnappix-bokeh-float-{{ ai_gen_id }} 4s ease-in-out infinite;
  }

  {% for i in (1..5) %}
    .ai-schnappix-bokeh-{{ ai_gen_id }}:nth-child({{ i }}) {
      width: {{ i | times: 30 | plus: 40 }}px;
      height: {{ i | times: 30 | plus: 40 }}px;
      top: {{ i | times: 15 }}%;
      left: {{ i | times: 18 }}%;
      animation-delay: {{ i | times: 0.5 }}s;
    }
  {% endfor %}

  .ai-schnappix-grain-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 400 400' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='2.5' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)'/%3E%3C/svg%3E");
    opacity: {{ block.settings.grain_opacity | divided_by: 100.0 }};
    pointer-events: none;
    mix-blend-mode: overlay;
  }

  @keyframes ai-schnappix-unblur-{{ ai_gen_id }} {
    0% {
      filter: blur({{ block.settings.initial_blur }}px);
    }
    100% {
      filter: blur(0);
    }
  }

  @keyframes ai-schnappix-pix-pulse-{{ ai_gen_id }} {
    0% {
      opacity: 0;
      transform: scale(0);
    }
    50% {
      opacity: 1;
      transform: scale(1.2);
    }
    100% {
      opacity: 1;
      transform: scale(1);
    }
  }

  @keyframes ai-schnappix-pixel-explosion-{{ ai_gen_id }} {
    0% {
      opacity: 0.8;
      transform: translate(-50%, -50%) scale(1);
    }
    100% {
      opacity: 0;
      transform: translate(-50%, -50%) scale(3);
    }
  }

  @keyframes ai-schnappix-letter-flicker-{{ ai_gen_id }} {
    0%, 20%, 40%, 60% {
      opacity: 0;
    }
    10%, 30%, 50% {
      opacity: 0.5;
    }
    70%, 100% {
      opacity: 1;
    }
  }

  @keyframes ai-schnappix-glass-{{ ai_gen_id }} {
    0% {
      opacity: 0;
    }
    50% {
      opacity: 0.6;
    }
    100% {
      opacity: 0.3;
    }
  }

  @keyframes ai-schnappix-rain-{{ ai_gen_id }} {
    0% {
      opacity: 0;
      transform: translateY(-20px);
    }
    10% {
      opacity: 0.3;
    }
    90% {
      opacity: 0.3;
    }
    100% {
      opacity: 0;
      transform: translateY(100vh);
    }
  }

  @keyframes ai-schnappix-bokeh-float-{{ ai_gen_id }} {
    0%, 100% {
      transform: translateY(0) translateX(0);
      opacity: 0.2;
    }
    50% {
      transform: translateY(-20px) translateX(10px);
      opacity: 0.4;
    }
  }

  @keyframes ai-schnappix-fog-{{ ai_gen_id }} {
    0%, 100% {
      opacity: 0;
    }
    50% {
      opacity: 0.5;
    }
  }

  @keyframes ai-schnappix-glow-pulse-{{ ai_gen_id }} {
    0%, 100% {
      box-shadow: 0 0 {{ block.settings.glow_intensity }}px {{ block.settings.glow_color }},
                  0 0 {{ block.settings.glow_intensity | times: 2 }}px {{ block.settings.glow_color }},
                  0 0 {{ block.settings.glow_intensity | times: 3 }}px {{ block.settings.orange_color }};
    }
    50% {
      box-shadow: 0 0 {{ block.settings.glow_intensity | times: 1.5 }}px {{ block.settings.glow_color }},
                  0 0 {{ block.settings.glow_intensity | times: 3 }}px {{ block.settings.glow_color }},
                  0 0 {{ block.settings.glow_intensity | times: 4 }}px {{ block.settings.orange_color }};
    }
  }

  .ai-schnappix-pix-block-{{ ai_gen_id }}.ai-schnappix-pulsing-{{ ai_gen_id }} {
    animation: ai-schnappix-pix-pulse-{{ ai_gen_id }} 1.5s cubic-bezier(0.34, 1.56, 0.64, 1) forwards,
               ai-schnappix-glow-pulse-{{ ai_gen_id }} 2s ease-in-out 3s infinite;
  }

  @keyframes ai-schnappix-shake-{{ ai_gen_id }} {
    0%, 100% { transform: translateX(0) translateY(0); }
    10% { transform: translateX(-1px) translateY(1px); }
    20% { transform: translateX(1px) translateY(-1px); }
    30% { transform: translateX(-1px) translateY(-1px); }
    40% { transform: translateX(1px) translateY(1px); }
    50% { transform: translateX(-1px) translateY(1px); }
    60% { transform: translateX(1px) translateY(-1px); }
    70% { transform: translateX(-1px) translateY(-1px); }
    80% { transform: translateX(1px) translateY(1px); }
    90% { transform: translateX(-1px) translateY(-1px); }
  }

  .ai-schnappix-logo-container-{{ ai_gen_id }}.ai-schnappix-shake-active-{{ ai_gen_id }} {
    animation: ai-schnappix-unblur-{{ ai_gen_id }} 1s ease-out forwards,
               ai-schnappix-shake-{{ ai_gen_id }} 0.5s ease-in-out 1s;
  }

  @media screen and (max-width: 749px) {
    .ai-schnappix-logo-animation-{{ ai_gen_id }} {
      height: {{ block.settings.animation_height | times: 0.7 }}px;
    }

    .ai-schnappix-pix-block-{{ ai_gen_id }} {
      width: {{ block.settings.pix_size | times: 0.7 }}px;
      height: {{ block.settings.pix_size | times: 0.7 }}px;
    }

    .ai-schnappix-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.6 }}px;
    }
  }
{% endstyle %}

<schnappix-logo-animation-{{ ai_gen_id }}
  class="ai-schnappix-logo-animation-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-schnappix-grain-{{ ai_gen_id }}"></div>
  <div class="ai-schnappix-glass-overlay-{{ ai_gen_id }}"></div>
  
  {% for i in (1..8) %}
    <div class="ai-schnappix-raindrop-{{ ai_gen_id }}"></div>
  {% endfor %}

  {% for i in (1..5) %}
    <div class="ai-schnappix-bokeh-{{ ai_gen_id }}"></div>
  {% endfor %}

  <div class="ai-schnappix-logo-container-{{ ai_gen_id }} {% if block.settings.enable_shake %}ai-schnappix-shake-active-{{ ai_gen_id }}{% endif %}">
    <div class="ai-schnappix-pix-block-{{ ai_gen_id }} {% if block.settings.enable_pulse %}ai-schnappix-pulsing-{{ ai_gen_id }}{% endif %}"></div>
    
    <div class="ai-schnappix-text-{{ ai_gen_id }}">
      {% assign letters = 'SCHNAPPIX' | split: '' %}
      {% for letter in letters %}
        <span class="ai-schnappix-letter-{{ ai_gen_id }}">{{ letter }}</span>
      {% endfor %}
    </div>
  </div>
</schnappix-logo-animation-{{ ai_gen_id }}>

<script>
  (function() {
    class SchnappixLogoAnimation{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        if (this.hasAttribute('data-autoplay')) {
          this.playAnimation();
        }
      }

      playAnimation() {
        const container = this.querySelector('.ai-schnappix-logo-container-{{ ai_gen_id }}');
        if (container) {
          container.style.animation = 'none';
          setTimeout(() => {
            container.style.animation = '';
          }, 10);
        }
      }
    }

    customElements.define('schnappix-logo-animation-{{ ai_gen_id }}', SchnappixLogoAnimation{{ ai_gen_id }});
  })();
</script>

